<body>
    <main>
        <div>
            <h4>Search by Title or Author</h4>
        </div>
        <form action="/searches" method="post">
            <input class="container1" type="text" name="search" placeholder="Enter a title or author" required>
            <fieldset>
                <label for="title">
          <span>Title</span>
          <input class="container2" type="radio" name="searchBy" value="title" required>
        </label>
            </fieldset>
            <fieldset>
                <label for="author">
          <span>Author</span>
          <input class="container3" type="radio" name="searchBy" value="author" required>
        </label>
            </fieldset>
            <button type="submit">Search the Google Books API</button>
        </form>
    </main>
</body>

</html>